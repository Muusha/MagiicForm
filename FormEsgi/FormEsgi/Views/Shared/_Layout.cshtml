                            <li class="#"><a href="#">Contact</a></li>
                        </ul>  

                        <ul class="nav navbar-nav navbar-right">
                            @if(Session["userSession"] == null){  
                                <li style="margin-right: 5px;"><form><a href="/Login/Login"><button type="button" class="btn btn-default navbar-btn">Connexion</button></a></form></li>
                                <li style="margin-right: 5px;"><form><a href="/Inscription/Index"><button type="button" class="btn btn-default navbar-btn">Inscription</button></a></form></li>
                            } else {
                                <li style="margin-right: 5px;"><form><a href="/Login/LogOut"><button type="button" class="btn btn-default navbar-btn">Déconnexion</button></a></form></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div id="main">
